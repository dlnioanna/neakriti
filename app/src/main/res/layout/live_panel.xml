<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/live_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itemselector"
        android:elevation="4dp"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/btn_live_radio"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:onClick="liveStreamRadioClicked"
                android:src="@drawable/btn_radio"
                android:textColor="#fafafa"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_live_tv"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/btn_live_radio"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:onClick="liveStreamTVClicked"
                android:src="@drawable/btn_tv"
                android:textColor="#fafafa"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</layout>