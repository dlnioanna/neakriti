<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itemselector"
        android:orientation="vertical"
        android:elevation="4dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/live_view_title_layout"
            style="?upperlogogray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/feed_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#eee"
                android:textSize="22sp"
                tools:text="Medium Text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/btn_live_radio"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:contentDescription="@string/btn_stream_tv"
                android:onClick="liveStreamRadioClicked"
                android:src="@drawable/btn_radio"
                android:textColor="#fafafa"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_live_tv"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:contentDescription="@string/btn_stream_radio"
                android:onClick="liveStreamTVClicked"
                android:src="@drawable/btn_tv"
                android:textColor="#fafafa"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</layout>