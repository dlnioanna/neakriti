<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->


    <style name="article_title_on_poster">
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">#66000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="poster_shader">
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@drawable/photo_background_protection_reversed</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Source: https://stackoverflow.com/questions/18848799/how-to-set-outline-border-to-textview -->
    <style name="OverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <!-- CUSTOM STYLES -->

    <style name="upperlogogray">
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingBottom">2sp</item>
        <item name="android:background">@drawable/upperlogogray</item>
    </style>

    <style name="row_background_dark">
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingBottom">2sp</item>
        <item name="android:background">@drawable/itemselector_dark</item>
    </style>

    <style name="row_background_light">
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingBottom">2sp</item>
        <item name="android:background">@drawable/itemselector</item>
    </style>


</resources>
