<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- =============================================================== -->
    <!-- DAY READING THEMES -->
    <!-- =============================================================== -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="collapsingColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="tabletBackground">@color/tabletBackground</item>
        <item name="articleBackground">@color/articleBackground</item>

        <item name="sideNavBar">@drawable/side_nav_bar</item>
        <item name="rowBackgroundItem">@drawable/itemselector</item>
        <item name="rowTitleTextColor">@color/textColorPrimary</item>
        <item name="rowDateTextColor">@color/textColorSecondary</item>

        <item name="upperlogogray">@style/upperlogogray</item>
    </style>

    <style name="DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <!-- Customize your theme here. -->
        <item name="collapsingColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="tabletBackground">@color/tabletBackground</item>
        <item name="articleBackground">@color/articleBackground</item>

        <item name="sideNavBar">@drawable/side_nav_bar</item>
        <item name="rowBackgroundItem">@drawable/itemselector</item>
        <item name="rowTitleTextColor">@color/textColorPrimary</item>
        <item name="rowDateTextColor">@color/textColorSecondary</item>

        <item name="upperlogogray">@style/upperlogogray</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- =============================================================== -->
    <!-- NIGHT READING THEMES --> <!-- change theme in activity like this setTheme(android.R.style.Theme); -->
    <!-- =============================================================== -->

    <style name="NightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="tabletBackground">@color/tabletBackgroundNight</item>
        <item name="articleBackground">@color/articleBackgroundNight</item>

        <item name="collapsingColor">@color/colorPrimaryNight</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorPrimaryNight</item>

        <item name="sideNavBar">@drawable/side_nav_bar_dark</item>
        <item name="rowBackgroundItem">@drawable/itemselector_dark</item>
        <item name="rowTitleTextColor">@color/textColorPrimaryNight</item>
        <item name="rowDateTextColor">@color/textColorSecondaryNight</item>

        <item name="upperlogogray">@style/upperlogogray</item>
    </style>

    <style name="NightDarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

        <item name="tabletBackground">@color/tabletBackgroundNight</item>
        <item name="articleBackground">@color/articleBackgroundNight</item>

        <item name="collapsingColor">@color/colorPrimaryNight</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryNight</item>
        <item name="colorAccent">@color/colorPrimaryNight</item>

        <item name="sideNavBar">@drawable/side_nav_bar_dark</item>
        <item name="rowBackgroundItem">@drawable/itemselector_dark</item>
        <item name="rowTitleTextColor">@color/textColorPrimaryNight</item>
        <item name="rowDateTextColor">@color/textColorSecondaryNight</item>

        <item name="upperlogogray">@style/upperlogogray</item>
    </style>

    <style name="NoActionBarNight" parent="NightAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashThemeNight" parent="NoActionBarNight">
        <item name="android:windowBackground">@drawable/splash_night</item>
    </style>

</resources>